<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/animalImage"
            android:layout_width="300dp"
            android:layout_height="466dp"
            android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp"
            android:layout_marginBottom="315dp"
            app:srcCompat="@drawable/rectangle" />

        <TextView
            android:id="@+id/animalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animalImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Animal Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/animalGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animalName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Gender"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/animalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animalGender"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Type"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/animalAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animalType"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Age"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/animalAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animalAge"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Address"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
